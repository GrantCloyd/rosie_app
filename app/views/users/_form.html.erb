<div class='<%="#{primary_form} p-10 mt-2"%>'>
    <%= form_for user, html: {class: "flex-col"} do |f| %>
      <p class="max-w-l mx-5">
        <%= f.label :full_name %>
        <br>
        <%= f.text_field :full_name %>
      </p>

      <p class="max-w-l mt-4 mx-5">
        <%= f.label :email %>
        <br>
        <%= f.text_field :email %>
      </p>

      <p  class="max-w-l mt-4 mx-5">
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
      </p>

      <p  class="max-w-l mt-4 mx-5">
        <%= f.label :password_confirmation %>
        <br>
        <%= f.password_field :password_confirmation %>
      </p>

      <button class='<%="#{secondary_button} ml-5"%>' >
        <%= f.submit "Create Account", data: {turbo_action: :advance}%>
      </button>
    <% end %>
  </div>