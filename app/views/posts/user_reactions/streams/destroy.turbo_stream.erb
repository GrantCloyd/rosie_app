<%= turbo_stream.update "reaction-action-container" do %>
  <%= render 'posts/user_reactions/reaction_actions', post: @post, current_user_reaction: nil %>
<% end %>

<% if @details.present? %>
  <%= turbo_stream.replace "users-#{@status}" do %>
    <%= render 'posts/user_reactions/user_reaction', status: @status, details: @details, user_reaction_status: nil %> 
  <% end %>
<% else %>
  <%= turbo_stream.remove "users-#{@status}" %>
<% end%>