<tr id='<%= "section-#{section.id}"%>'>
    <td class='<%= "#{primary_td} pl-8"%>'> <%= section.title %> </td>
    <td class='<%= "#{primary_td}"%>'> <%= section.description %> </td>
    <td class='<%= "#{primary_td} pr-8"%>'> <%= section.status.titleize %> </td>
      <td class='<%= "#{primary_td} pr-8"%>'> <%= section.created_at&.strftime("%D") %> </td>
    <td class='<%= "#{primary_td} pr-12"%>'>
        <button class='<%="#{action_button}"%>'>
          <%= link_to "View", group_section_path(group.id, section.id), data: {turbo_action: :advance} %>
        </button>
        <% if user_section.moderator_or_creator? %>
        <button class='<%="#{action_button}"%>'>
          <%= link_to "Edit", edit_group_section_path(group.id, section.id), data: {turbo_action: :advance} %>
        </button>
        <button class='<%="#{action_button}"%>'>
          <%= link_to "Delete", group_section_path(group.id, section.id), data: {turbo_method: :delete } %>
        </button>
        <% end %>
    </td>
</tr>