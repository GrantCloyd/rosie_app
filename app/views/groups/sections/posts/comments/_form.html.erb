<div id="comment-form" class='<%="rounded-md mt-2 flex justify-center"%>'>
  <%= form_with model: Comment.new, url: post_comments_path(post), html: {class: "#{primary_form} p-6" } do |f| %>
    <p class="mt-3 w-80 bg-white p-5 pr-9">
      <%= f.label 'Add Comment:' %> 
      <br>
      <%= f.text_area :content, cols: 28, rows: 3 %>
    </p>

    <button class='<%="#{secondary_button} mb-2 container mx-auto"%>'>
      <%= f.submit %>
    </button>
  <% end %>
</div>