<div id=<%= "comment-#{comment.id}"%> class='<%="rounded-md mt-2 flex justify-center"%>'>
  <%= form_with model: comment, url: post_comment_path(post, comment)  do |f| %>
    <p class="mt-3">
      <%= f.label 'Editing comment' %> 
      <br>
      <%= f.text_area :content, cols: 70, rows: 3 %>
    </p>

    <button class='<%="#{action_button} mb-2 container-md"%>'>
      <%= f.submit data: {turbo_stream: true }%>
    </button>
     <button class='<%="#{action_button} mb-2 container-md"%>'>
      <%= link_to  "Cancel", post_comment_path(post, comment), data: {turbo_stream: true} %>
    </button>
  <% end %>
</div>