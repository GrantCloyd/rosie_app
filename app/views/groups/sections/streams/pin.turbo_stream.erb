<%= turbo_stream.remove @section %>

<%= turbo_stream.append "sections-pinned-container" do %>
  <%= render partial: 'groups/partials/section', 
  locals: {
    group: @group, 
    section: @section,
    user_group: @user_group, 
    user_group_section: @user_group_section,
    view: :pinned
    } %>
<% end %>

<%= turbo_stream.replace "flash"  do %>
  <% flash[:alert] = "#{@section.title} has been pinned!" %>
  <%= render 'layouts/flash' %>
<% end %>