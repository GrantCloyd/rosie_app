<%= turbo_stream.remove "section_#{@section.id}" %>

<%= turbo_stream.append "sections-published-container" do %>
  <%= render partial: 'groups/partials/section', 
  locals: {
    group: @group, 
    section: @section, 
    user_group_section: @user_group_section, 
    view: :published
    } %>
<% end %>

<%= turbo_stream.replace "flash"  do %>
  <% flash[:alert] = "#{@section.title} has been published!" %>
  <%= render 'layouts/flash' %>
<% end %>