<%= turbo_frame_tag "main_view" do  %>
  <div class="container-md">
  <h1 class='<%="#{primary_header}"%>'> Invites </h1>

  <%= render 'invites-buttons', cached: true, view: :index %>

  <div class="bg-slate-200 mt-5">
    <table class="border-collapse table-auto w-full text-sm">
      <thead class="pt-5">
        <tr> 
          <th class='<%="#{primary_th} pl-8"%>'> Email </th>
          <th class='<%="#{primary_th}"%>'> Status </th>
          <th class='<%="#{primary_th}"%> pr-8'> Privacy Tier </th>
          <th class='<%="#{primary_th} pr-8"%>'> Role </th>
          <th class='<%="#{primary_th} pr-12"%>'> Actions </th>
        </tr>
      </thead>
      <%= turbo_frame_tag "invite-container" do %>
      <tbody class="bg-white">
        <% @invites.each do |invite| %>
          <tr id='<%="invite-#{invite.id}" %>'>
            <td class='<%= "#{primary_td} pl-8"%>'> <%= invite.target_email %> </td>
            <td class='<%= "#{primary_td}"%>'> <%= invite.status.titleize %> </td>
            <td class='<%= "#{primary_td} pr-8"%>'> <%= invite.role_tier.titleize %> </td>
            <td class='<%= "#{primary_td} pr-8"%>'> <%= invite.privacy_tier.titleize %> </td>
            <td class='<%= "#{primary_td} pr-12"%>'> 
            <%= render 'groups/invites/invite-actions', invite: invite, group: @group%>
             </td>
          </tr>
        <% end%>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
<% end %>  