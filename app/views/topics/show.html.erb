<div class="container-md">
  <h1 class='<%="#{primary_header}"%>'> Topic Details </h1>

  <%= render "topics-buttons", view: :show, topic: @topic, cached: true %>

  <div class='<%="#{primary_form}"%>'> 
     <p class="my-5 p-2"> <span class="font-bold"> <%= @topic.title %> </span> </p>

     <p  class= p-2> Description: <%= @topic.description %> </p> 

     <p class="my-5 p-2"> Status: <%= @topic.status.titleize %> </p> 
  </div>

  <button class='<%="#{primary_button}"%>'>
    <%= link_to "Edit Topic", edit_topic_path(@topic.id) %>
  </button>
  
  <button class='<%="#{primary_button}"%>'>
    <%= link_to "New Post", new_topic_post_path(@topic.id) %>
  </button>

   <button class='<%="#{primary_button}"%>'>
    <%= link_to "View Posts", topic_posts_path(@topic.id) %>
  </button>

  <button class='<%="#{primary_button}"%>'>
    <%= link_to "View invites", topic_invites_path(@topic.id) %>
  </button>

  <button class='<%="#{primary_button}"%>'>
    <%= link_to "Invite to this topic", new_topic_invite_path(@topic.id) %>
  </button>
</div>