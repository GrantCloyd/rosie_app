<div class='<%="#{primary_form} mt-2 px-10 pt-2 pb-2"%>'> 
    <%= form_for topic do |f| %>
      <p class="max-w-l">
        <%= f.label :title %> <br> <%= f.text_field :title %>
      </p>

      <p class="max-w-l mt-4">
        <%= f.label :description %> 
        <br>
        <%= f.text_area :description %>
      </p>

      <p  class="max-w-l mt-4">
        <%= f.label :status%>
        <br>
        <%= f.select :status, topic_creation_display_statuses %>
      </p>

      <%= f.hidden_field :section_id, value: section.id %>

      <button class='<%="#{secondary_button}"%>' >
        <%= f.submit  data: {turbo_action: :advance}%>
      </button>
    <% end %>
  </div>