<div class='<%="#{primary_form}"%>'> 
    <%= form_for topic do |f| %>
      <p class="max-w-l">
        <%= f.label :title %> <br> <%= f.text_field :title %>
      </p>

      <p class="max-w-l mt-4">
        <%= f.label :description %> 
        <br>
        <%= f.text_area :description %>
      </p>

      <p  class="max-w-l mt-4">
        <%= f.label :status%>
        <br>
        <%= f.select :status, topic_creation_display_statuses %>
      </p>

      <button class='<%="#{secondary_button}"%>' >
        <%= f.submit  %>
      </button>
    <% end %>
  </div>