<div class="container-md">
  <h1 class="text-3xl font-bold text-slate-200 underline"> Create New Topic </h1>

    <% flash.each do |type, msg| %>
      <p class="max-w-md my-5 bg-slate-100">
        <%= msg %>
      </p>
    <% end %>

  <button class="bg-slate-700 hover:bg-slate-500 text-white font-bold py-2 px-4 rounded my-4">
    <%= link_to "Topics", topics_path %>
  </button>

  <div class="mt-10 p-10 shadow-md bg-slate-100 max-w-xl flex justify-content"> 
    <%= form_for @topic do |f| %>
      <p class="max-w-l">
        <%= f.label :title %> <br> <%= f.text_field :title %>
      </p>

      <p class="max-w-l mt-4">
        <%= f.label :description %> 
        <br>
        <%= f.text_area :description %>
      </p>

      <p  class="max-w-l mt-4">
        <%= f.label :status%>
        <br>
        <%= f.select :status, Topic.creation_display_statuses %>
      </p>

      <button class="bg-sky-700 hover:bg-sky-500 text-white font-bold py-2 px-4 rounded mt-4" >
        <%= f.submit  %>
      </button>
    <% end %>
  </div>

</div>